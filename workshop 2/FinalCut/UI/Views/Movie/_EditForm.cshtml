@model MovieViewModel

@Html.HiddenFor(x => x.Id)
@Html.LabelFor(x => x.Title) @Html.TextBoxFor(x => x.Title)
@Html.LabelFor(x => x.Description) @Html.TextAreaFor(x => x.Description)
@Html.LabelFor(x => x.Genre) @(this.Select("Genre").Options<Genre>().Selected(Model.Genre))
@Html.LabelFor(x => x.Length) @Html.TextBoxFor(x => x.Length)
@Html.LabelFor(x => x.CoverUrl, "Cover Url") @Html.TextBoxFor(x => x.CoverUrl)
@Html.LabelFor(x => x.TrailerUrl, "Trailer Url") @Html.TextBoxFor(x => x.TrailerUrl)
@Html.LabelFor(x => x.ReleaseDateShortDate, "Release Date") @Html.TextBoxFor(x => x.ReleaseDateShortDate, new { @class = "datePicker"})
@Html.ValidationSummary()
<script type="text/javascript">
    $('.datePicker').datepicker();
</script>